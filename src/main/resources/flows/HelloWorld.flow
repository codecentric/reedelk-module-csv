{
  "id": "ad01220a-cabe-4f47-83d7-5ea560bba0d3",
  "title": "GET Hello world flow",
  "description": "Returns 'Hello world' text from GET /api/message",
  "flow": [
    {
      "implementor": "com.reedelk.rest.component.RESTListener",
      "description": "GET Hello World REST Listener",
      "configuration": {"ref": "bbaaff1e-a601-4082-b0bf-6e2e6fc674cc"},
      "path": "/message/{name:.*}",
      "method": "GET",
      "streaming": "AUTO",
      "response": {
        "body": "#[message.payload()]",
        "status": 200
      },
      "errorResponse": {
        "body": "#[error]",
        "status": 500
      }
    },
    {
      "implementor": "com.reedelk.core.component.LoggerComponent",
      "description": "Log message attributes",
      "level": "INFO",
      "message": "#[message.attributes()]"
    },
    {
      "implementor": "com.reedelk.core.component.ScriptEvaluator",
      "description": "Concatenate 'Hello World' with 'name' path parameter",
      "mimeType": "text/plain",
      "script": "helloWorld.js"
    }
  ]
}